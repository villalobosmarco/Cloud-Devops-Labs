pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Terraform Init') {
            steps {
                script {
                    sh 'terraform init'
                }
            
            }
        }
        stage('Terraform apply') {
            steps {
                script {
                    sh 'terraform apply'
                }
            }
        }
    }
}
